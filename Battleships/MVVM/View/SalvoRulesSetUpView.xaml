<UserControl x:Class="Battleships.MVVM.View.SalvoRulesSetUpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             d:DataContext="{d:DesignInstance viewmodel:SalvoRulesSetUpViewModel}"
             xmlns:local="clr-namespace:Battleships.MVVM.View"
             xmlns:viewmodel="clr-namespace:Battleships.MVVM.ViewModel"
             xmlns:controls="clr-namespace:Battleships.MVVM.View.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <controls:InformationPopUp Panel.ZIndex="10"
                                   Image="{Binding HelpPageImage}"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Margin="15,15,0,0"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Viewbox Grid.Row="1" 
         Grid.Column="1" Grid.ColumnSpan="5">
                <TextBlock Text="Select Salvo Game rules"
                       Style="{DynamicResource TitleText}"/>
            </Viewbox>
            <Viewbox Grid.Row="3"
                 Grid.Column="1" Grid.ColumnSpan="2"
                 HorizontalAlignment="Right">
                <TextBlock Text="Five shots per turn"
                       Style="{DynamicResource StandardText}"
                       ToolTip="{Binding ShotsFixedExplanation, Mode=OneWay}"/>
            </Viewbox>
            <CheckBox Grid.Row="3"
                  Grid.Column="4"
                  IsChecked="{Binding ShotsFixed, Mode=TwoWay}"
                  Style="{DynamicResource ToggleSwitchCheckBox}"/>
            <Viewbox Grid.Row="5"
                 Grid.Column="1" Grid.ColumnSpan="2"
                 HorizontalAlignment="Right">
                <TextBlock Text="Shots equal total unsunk ships"
                       Style="{DynamicResource StandardText}"
                       ToolTip="{Binding ShotsEqualUnsunkExplanation, Mode=OneWay}"/>
            </Viewbox>
            <CheckBox Grid.Row="5"
                  Grid.Column="4"
                  IsChecked="{Binding ShotsEqualUnsunkShips, Mode=TwoWay}"
                  Style="{DynamicResource ToggleSwitchCheckBox}"/>
            <Viewbox Grid.Row="7"
                 Grid.Column="1" Grid.ColumnSpan="2"
                 HorizontalAlignment="Right">
                <TextBlock Text="Shots equal total undamaged ships"
                       Style="{DynamicResource StandardText}"
                       ToolTip="{Binding ShotsEqualUndamagedExplanation, Mode=OneWay}"/>
            </Viewbox>
            <CheckBox Grid.Row="7"
                  Grid.Column="4"
                  IsChecked="{Binding ShotsEqualUndamagedShips, Mode=TwoWay}"
                  Style="{DynamicResource ToggleSwitchCheckBox}"/>
            <Viewbox Grid.Row="9"
                 Grid.Column="1" Grid.ColumnSpan="2"
                 HorizontalAlignment="Right">
                <TextBlock Text="Shots equal largest unsunk ship size"
                       Style="{DynamicResource StandardText}"
                       ToolTip="{Binding ShotsEqualLargestUnsunkExplanation, Mode=OneWay}"/>
            </Viewbox>
            <CheckBox Grid.Row="9"
                  Grid.Column="4"
                  IsChecked="{Binding ShotsEqualLargestUnsunkShip, Mode=TwoWay}"
                  Style="{DynamicResource ToggleSwitchCheckBox}"/>
            <Viewbox Grid.Row="11"
                 Grid.Column="1" Grid.ColumnSpan="2"
                 HorizontalAlignment="Right">
                <TextBlock Text="Shots equal largest undamaged ship size"
                       Style="{DynamicResource StandardText}"
                       ToolTip="{Binding ShotsEqualLargestUndamagedExplanation, Mode=OneWay}"/>
            </Viewbox>
            <CheckBox Grid.Row="11"
                  Grid.Column="4"
                  IsChecked="{Binding ShotsEqualLargestUndamagedShip, Mode=TwoWay}"
                  Style="{DynamicResource ToggleSwitchCheckBox}"/>
            <Button Grid.Row="13"
                Grid.Column="2" Grid.ColumnSpan="2"
                Content="Continue"
                Command="{Binding SetRulesCommand}"
                Style="{DynamicResource StandardButtonStyle}"/>
        </Grid>
    </Grid>
</UserControl>
