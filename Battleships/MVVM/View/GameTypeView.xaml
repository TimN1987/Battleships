<UserControl x:Class="Battleships.MVVM.View.GameTypeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Battleships.MVVM.View"
             xmlns:enums="clr-namespace:Battleships.MVVM.Enums"
             xmlns:viewmodel="clr-namespace:Battleships.MVVM.ViewModel"
             d:DataContext="{d:DesignInstance Type=viewmodel:GameTypeViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Viewbox Grid.Row="1" 
                 Grid.Column="1" Grid.ColumnSpan="3">
            <TextBlock Text="Battleships"
                       Style="{DynamicResource TitleText}"/>
        </Viewbox>
        <Viewbox Grid.Row="3" Grid.Column="1">
            <TextBlock Text="Classic Game"
                       Style="{DynamicResource SubtitleText}"/>
        </Viewbox>
        <Viewbox Grid.Row="3" Grid.Column="3">
            <TextBlock Text="Salvo Game"
                       Style="{DynamicResource SubtitleText}"/>
        </Viewbox>
        <Viewbox Grid.Row="5" Grid.Column="1">
            <StackPanel Orientation="Vertical">
                <BulletDecorator>
                    <BulletDecorator.Bullet>
                        <Ellipse Style="{DynamicResource BulletDecoratorBulletEllipse}"/>
                    </BulletDecorator.Bullet>
                    <BulletDecorator.Child>
                        <TextBlock Text="Classic naval strategy game"
                                   Style="{DynamicResource BulletDecoratorChildTextBlockStylw}"/>
                    </BulletDecorator.Child>
                </BulletDecorator>
                <BulletDecorator>
                    <BulletDecorator.Bullet>
                        <Ellipse Style="{DynamicResource BulletDecoratorBulletEllipse}"/>
                    </BulletDecorator.Bullet>
                    <BulletDecorator.Child>
                        <TextBlock Text="Hide your ships carefully"
                    Style="{DynamicResource BulletDecoratorChildTextBlockStylw}"/>
                    </BulletDecorator.Child>
                </BulletDecorator>
                <BulletDecorator>
                    <BulletDecorator.Bullet>
                        <Ellipse Style="{DynamicResource BulletDecoratorBulletEllipse}"/>
                    </BulletDecorator.Bullet>
                    <BulletDecorator.Child>
                        <TextBlock Text="Call out grid positions to attack"
                    Style="{DynamicResource BulletDecoratorChildTextBlockStylw}"/>
                    </BulletDecorator.Child>
                </BulletDecorator>
                <BulletDecorator>
                    <BulletDecorator.Bullet>
                        <Ellipse Style="{DynamicResource BulletDecoratorBulletEllipse}"/>
                    </BulletDecorator.Bullet>
                    <BulletDecorator.Child>
                        <TextBlock Text="Hit ships repeatedly to sink them"
                    Style="{DynamicResource BulletDecoratorChildTextBlockStylw}"/>
                    </BulletDecorator.Child>
                </BulletDecorator>
                <BulletDecorator>
                    <BulletDecorator.Bullet>
                        <Ellipse Style="{DynamicResource BulletDecoratorBulletEllipse}"/>
                    </BulletDecorator.Bullet>
                    <BulletDecorator.Child>
                        <TextBlock Text="Win by sinking all enemy ships"
                    Style="{DynamicResource BulletDecoratorChildTextBlockStylw}"/>
                    </BulletDecorator.Child>
                </BulletDecorator>
            </StackPanel>
        </Viewbox>
        <Viewbox Grid.Row="5" Grid.Column="3">
            <StackPanel Orientation="Vertical">
                <BulletDecorator>
                    <BulletDecorator.Bullet>
                        <Ellipse Style="{DynamicResource BulletDecoratorBulletEllipse}"/>
                    </BulletDecorator.Bullet>
                    <BulletDecorator.Child>
                        <TextBlock Text="More shots - more intensity"
                    Style="{DynamicResource BulletDecoratorChildTextBlockStylw}"/>
                    </BulletDecorator.Child>
                </BulletDecorator>
                <BulletDecorator>
                    <BulletDecorator.Bullet>
                        <Ellipse Style="{DynamicResource BulletDecoratorBulletEllipse}"/>
                    </BulletDecorator.Bullet>
                    <BulletDecorator.Child>
                        <TextBlock Text="Multiple shots per turn"
                    Style="{DynamicResource BulletDecoratorChildTextBlockStylw}"/>
                    </BulletDecorator.Child>
                </BulletDecorator>
                <BulletDecorator>
                    <BulletDecorator.Bullet>
                        <Ellipse Style="{DynamicResource BulletDecoratorBulletEllipse}"/>
                    </BulletDecorator.Bullet>
                    <BulletDecorator.Child>
                        <TextBlock Text="Lose your ships, lose your shots"
                                   Style="{DynamicResource BulletDecoratorChildTextBlockStylw}"/>
                    </BulletDecorator.Child>
                </BulletDecorator>
                <BulletDecorator>
                    <BulletDecorator.Bullet>
                        <Ellipse Style="{DynamicResource BulletDecoratorBulletEllipse}"/>
                    </BulletDecorator.Bullet>
                    <BulletDecorator.Child>
                        <TextBlock Text="Target ships with salvos"
                    Style="{DynamicResource BulletDecoratorChildTextBlockStylw}"/>
                    </BulletDecorator.Child>
                </BulletDecorator>
                <BulletDecorator>
                    <BulletDecorator.Bullet>
                        <Ellipse Style="{DynamicResource BulletDecoratorBulletEllipse}"/>
                    </BulletDecorator.Bullet>
                    <BulletDecorator.Child>
                        <TextBlock Text="Sink ships even faster to win"
                    Style="{DynamicResource BulletDecoratorChildTextBlockStylw}"/>
                    </BulletDecorator.Child>
                </BulletDecorator>
            </StackPanel>
        </Viewbox>
        <Button Grid.Row="7" Grid.Column="1"
                Content="Classic Game"
                Command="{Binding SelectGameTypeCommand}"
                CommandParameter="{x:Static enums:GameType.Classic}"
                Style="{DynamicResource StandardButtonStyle}"/>
        <Button Grid.Row="7" Grid.Column="3"
                Content="Salvo Game"
                Command="{Binding SelectGameTypeCommand}"
                CommandParameter="{x:Static enums:GameType.Salvo}"
                Style="{DynamicResource StandardButtonStyle}"/>
    </Grid>
</UserControl>
