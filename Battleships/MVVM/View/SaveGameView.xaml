<UserControl x:Class="Battleships.MVVM.View.SaveGameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Battleships.MVVM.View"
             xmlns:viewmodel="clr-namespace:Battleships.MVVM.ViewModel"
             d:DataContext="{d:DesignInstance Type=viewmodel:SaveGameViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>
            <Viewbox>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="480"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="420"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Viewbox Grid.Row="1"
                             Grid.Column="1">
                        <TextBlock Text="Save Game"
                                   Style="{DynamicResource TitleText}"/>
                    </Viewbox>
                    <ListView Grid.Row="3"
                              Grid.Column="1" 
                              Style="{StaticResource SaveGameListView}"
                              ItemsSource="{Binding SaveGames}"
                              SelectedItem="{Binding SelectedGame, Mode=TwoWay}"/>
                    <Grid Grid.Row="5"
                          Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="300"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="Save as..."
                                   Style="{DynamicResource SubtitleText}"/>
                        <TextBox Grid.Column="1"
                                 Style="{DynamicResource SaveNameTextBoxStyle}"
                                 Text="{Binding SaveName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                    <Grid Grid.Row="7"
                          Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="210"/>
                            <ColumnDefinition Width="210"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0"
                                Margin="0,0,15,0"
                                Content="Save Game"
                                Style="{DynamicResource StandardButtonStyle}"
                                Command="{Binding SaveGameCommand}"/>
                        <Button Grid.Column="1"
                                Margin="15,0,0,0"
                                Content="Return To Game"
                                Style="{DynamicResource StandardButtonStyle}"
                                Command="{Binding ReturnToGameCommand}"/>
                    </Grid>
                </Grid>
            </Viewbox>
        </Grid>
    </Grid>
</UserControl>
