<UserControl x:Class="Battleships.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             xmlns:local="clr-namespace:Battleships.MVVM.View"
             xmlns:viewmodel="clr-namespace:Battleships.MVVM.ViewModel"
             d:DataContext="{d:DesignInstance Type=viewmodel:HomeViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Viewbox Grid.Row="1" Grid.Column="1">
            <TextBlock Text="Battleships"
                       Style="{DynamicResource TitleText}"/>
        </Viewbox>
        <Border Grid.Row="3" Grid.Column="1" CornerRadius="80, 80, 80, 80" BorderBrush="Navy" BorderThickness="1">
            <Border.Background>
                <VisualBrush>
                    <VisualBrush.Visual>
                        <Image gif:ImageBehavior.AnimatedSource="/MVVM/Resources/loadingGIF.gif"
                               gif:ImageBehavior.AutoStart="True"
                               gif:ImageBehavior.RepeatBehavior="3x"
                               gif:ImageBehavior.AnimationSpeedRatio="0.5"/>
                    </VisualBrush.Visual>
                </VisualBrush>
            </Border.Background>
        </Border>
        <Grid Grid.Row="5" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0"
                    Padding="10,5"
                    BorderBrush="Transparent">
                <Button Content="New Game"
                        Command="{Binding NewGameCommand}"
                        Style="{DynamicResource StandardButtonStyle}"/>
            </Border>
            <Border Grid.Column="1"
                    Padding="10,5"
                    BorderBrush="Transparent">
                <Button Content="Continue"
                        Command="{Binding ContinueGameCommand}"
                        IsEnabled="{Binding AutosaveFileExists, Mode=OneWay}"
                        Style="{DynamicResource StandardButtonStyle}"/>
            </Border>
            <Border Grid.Column="2"
                    Padding="10,5"
                    BorderBrush="Transparent">
                <Button Content="Load Game"
                        Command="{Binding LoadGameCommand}"
                        Style="{DynamicResource StandardButtonStyle}"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>
