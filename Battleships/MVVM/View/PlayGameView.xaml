<UserControl x:Class="Battleships.MVVM.View.PlayGameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:Battleships.MVVM.View"
             xmlns:viewmodel="clr-namespace:Battleships.MVVM.ViewModel"
             xmlns:converters="clr-namespace:Battleships.MVVM.Converters"
             xmlns:enums="clr-namespace:Battleships.MVVM.Enums"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:controls="clr-namespace:Battleships.MVVM.View.CustomControls"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             d:DataContext="{d:DesignInstance Type=viewmodel:PlayGameViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:ShotTypeToBooleanConverter x:Key="ShotTypeToBooleanConverter"/>
        <converters:StandardBooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:GridPositionToBomberEndPositionConverter x:Key="GridPositionToBomberEndPositionConverter"/>
        <converters:GridPositionToExplosionPositionConverter x:Key="GridPositionToExplosionPositionConverter"/>
        <converters:GridPositionToExplosionDelayConverter x:Key="GridPositionToExplosionDelayConverter"/>
        <sys:Boolean x:Key="True">True</sys:Boolean>
        <sys:Boolean x:Key="False">False</sys:Boolean>
        <Storyboard x:Key="BomberAnimation"
                    Completed="Storyboard_Completed">
            <DoubleAnimation Storyboard.TargetName="BomberImage"
                             Storyboard.TargetProperty="(Canvas.Top)"
                             From="550"
                             To="-400"
                             Duration="0:0:2"/>
            <DoubleAnimation Storyboard.TargetName="BomberImage"
                             Storyboard.TargetProperty="(Canvas.Left)"
                             From="0"
                             To="{Binding TargetedCell, Converter={StaticResource GridPositionToBomberEndPositionConverter}}"
                             Duration="0:0:2"/>
            <DoubleAnimation Storyboard.TargetName="BomberImage"
                             Storyboard.TargetProperty="(Image.Effect).(DropShadowEffect.ShadowDepth)"
                             From="60"
                             To="40"
                             Duration="0:0:2"/>
            <DoubleAnimation Storyboard.TargetName="BomberImage"
                             Storyboard.TargetProperty="(Image.Effect).(DropShadowEffect.BlurRadius)"
                             From="50"
                             To="70"
                             Duration="0:0:2"/>
            <DoubleAnimation Storyboard.TargetName="BomberImage"
                             Storyboard.TargetProperty="(Image.Effect).(DropShadowEffect.Opacity)"
                             From="0.4"
                             To="0.6"
                             Duration="0:0:2"/>
            <DoubleAnimation Storyboard.TargetName="explosion"
                             Storyboard.TargetProperty="Height"
                             From="0"
                             To="300"
                             BeginTime="{Binding TargetedCell, 
                                            Converter={StaticResource GridPositionToExplosionDelayConverter}, 
                                            ConverterParameter={StaticResource True}}"
                             Duration="{Binding TargetedCell, 
                                            Converter={StaticResource GridPositionToExplosionDelayConverter}, 
                                            ConverterParameter={StaticResource False}}"/>
            <DoubleAnimation Storyboard.TargetName="explosion"
                             Storyboard.TargetProperty="Width"
                             From="0"
                             To="300"
                             BeginTime="{Binding TargetedCell, 
                                            Converter={StaticResource GridPositionToExplosionDelayConverter}, 
                                            ConverterParameter={StaticResource True}}"
                             Duration="{Binding TargetedCell, 
                                            Converter={StaticResource GridPositionToExplosionDelayConverter}, 
                                            ConverterParameter={StaticResource False}}"/>
            <DoubleAnimation Storyboard.TargetName="explosion"
                             Storyboard.TargetProperty="(Canvas.Left)"
                             From="{Binding TargetedCell, 
                                    Converter={StaticResource GridPositionToExplosionPositionConverter}, 
                                    ConverterParameter={x:Static enums:ExplosionPosition.StartLeft}}"
                             To="{Binding TargetedCell, 
                                    Converter={StaticResource GridPositionToExplosionPositionConverter}, 
                                    ConverterParameter={x:Static enums:ExplosionPosition.EndLeft}}"
                             BeginTime="{Binding TargetedCell, 
                                            Converter={StaticResource GridPositionToExplosionDelayConverter}, 
                                            ConverterParameter={StaticResource True}}"
                             Duration="{Binding TargetedCell, 
                                            Converter={StaticResource GridPositionToExplosionDelayConverter}, 
                                            ConverterParameter={StaticResource False}}"/>
            <DoubleAnimation Storyboard.TargetName="explosion"
                             Storyboard.TargetProperty="(Canvas.Top)"
                             From="{Binding TargetedCell, 
                                    Converter={StaticResource GridPositionToExplosionPositionConverter}, 
                                    ConverterParameter={x:Static enums:ExplosionPosition.StartTop}}"
                             To="{Binding TargetedCell, 
                                    Converter={StaticResource GridPositionToExplosionPositionConverter}, 
                                    ConverterParameter={x:Static enums:ExplosionPosition.EndTop}}"
                             BeginTime="{Binding TargetedCell, 
                                            Converter={StaticResource GridPositionToExplosionDelayConverter}, 
                                            ConverterParameter={StaticResource True}}"
                             Duration="{Binding TargetedCell, 
                                            Converter={StaticResource GridPositionToExplosionDelayConverter}, 
                                            ConverterParameter={StaticResource False}}"/>
            <DoubleAnimation Storyboard.TargetName="explosion"
                             Storyboard.TargetProperty="Opacity"
                             From="1"
                             To="0"
                             BeginTime="{Binding TargetedCell, 
                                            Converter={StaticResource GridPositionToExplosionDelayConverter}, 
                                            ConverterParameter={StaticResource True}}"
                             Duration="{Binding TargetedCell, 
                                            Converter={StaticResource GridPositionToExplosionDelayConverter}, 
                                            ConverterParameter={StaticResource False}}"/>
        </Storyboard>
    </UserControl.Resources>
    <UserControl.InputBindings>
        <KeyBinding Key="Up"
                    Command="{Binding MoveFocusCommand}"
                    CommandParameter="{x:Static enums:KeyboardDirection.Up}"/>
        <KeyBinding Key="Down"
                    Command="{Binding MoveFocusCommand}"
                    CommandParameter="{x:Static enums:KeyboardDirection.Down}"/>
        <KeyBinding Key="Left"
                    Command="{Binding MoveFocusCommand}"
                    CommandParameter="{x:Static enums:KeyboardDirection.Left}"/>
        <KeyBinding Key="Right"
                    Command="{Binding MoveFocusCommand}"
                    CommandParameter="{x:Static enums:KeyboardDirection.Right}"/>
        <KeyBinding Key="Enter"
                    Command="{Binding SelectGridCellCommand}"/>
    </UserControl.InputBindings>
    <Grid>
        <!-- Loading screen -->
        <Viewbox Panel.ZIndex="1000"
                 Visibility="{Binding LoadingScreenVisible}"
                 IsHitTestVisible="False"
                 Focusable="False">
            <Grid Width="800" Height="450"
                  Background="{DynamicResource MainBackground}"
                  IsHitTestVisible="False"
                  Focusable="False">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="1"
                           Text="{Binding LoadingText}"
                           Style="{DynamicResource StandardText}"
                           HorizontalAlignment="Center"/>
                <ProgressBar Grid.Row="2"
                             Minimum="0"
                             Maximum="4"
                             Value="{Binding LoadingValue}"
                             Background="{DynamicResource IsDefaultBackground}"
                             Foreground="{DynamicResource IsHighlightedBackground}"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Center"
                             Width="200"
                             Height="50"/>
            </Grid>
        </Viewbox>
        
        
        <!-- Game Over animation canvas -->
        <Viewbox Panel.ZIndex="2">
            <StackPanel Width="800" Height="450"
                        Orientation="Vertical"
                        Background="{DynamicResource MainBackground}"
                        Visibility="{Binding GameOverVisible}">
                <TextBlock Text="Game Over" 
                           Style="{DynamicResource TitleText}"/>
                <TextBlock Text="{Binding GameOverText}"
                           Style="{DynamicResource StandardText}"
                           HorizontalAlignment="Center"/>
                <Image gif:ImageBehavior.AnimatedSource="{Binding GameOverImage}"
                       gif:ImageBehavior.AutoStart="True"
                       gif:ImageBehavior.RepeatBehavior="Forever"
                       gif:ImageBehavior.AnimationSpeedRatio="0.8"
                       Visibility="{Binding GameOverVisible}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Height="250"
                       Margin="0,15"/>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,15">
                    <Button Content="Home"
                            Style="{DynamicResource StandardButtonStyle}"
                            Command="{Binding ReturnHomeCommand}"
                            Padding="20,5"
                            Margin="10,0"/>
                    <Button Content="Restart"
                            Style="{DynamicResource StandardButtonStyle}"
                            Command="{Binding RestartGameCommand}"
                            Padding="20,5"
                            Margin="10,0"/>
                </StackPanel>
            </StackPanel>
        </Viewbox>
        
        <!-- Bomber animation canvas -->
        <Viewbox Panel.ZIndex="1"
                 IsHitTestVisible="False"
                 Focusable="False">
            <Canvas Width="800" Height="450"
                    IsHitTestVisible="False"
                    Focusable="False">
                <Image x:Name="BomberImage"
                       Width="200"
                       Height="200"
                       Source="{Binding BomberImage, NotifyOnTargetUpdated=True, TargetNullValue={x:Null}}"
                       Canvas.Left="50"
                       Canvas.Top="550"
                       Visibility="{Binding BomberVisible}"
                       IsHitTestVisible="False"
                       Focusable="False">
                    <Image.Effect>
                        <DropShadowEffect Color="Black"
                                          Direction="320"
                                          ShadowDepth="60"
                                          Opacity="0.4"
                                          BlurRadius="50"/>
                    </Image.Effect>
                    <Image.Triggers>
                        <EventTrigger RoutedEvent="Binding.TargetUpdated">
                            <BeginStoryboard Storyboard="{StaticResource BomberAnimation}"/>
                        </EventTrigger>
                    </Image.Triggers>
                </Image>
                <Image x:Name="explosion"
                       Width="0" Height="0"
                       Source="{Binding ExplosionImage}"
                       Opacity="0"
                       Visibility="{Binding BomberVisible}"
                       Canvas.Left="350"
                       Canvas.Top="200"
                       IsHitTestVisible="False"
                       Focusable="False"/>
            </Canvas>
        </Viewbox>
        
        <!-- Main game grid -->
        <Viewbox Stretch="Uniform"
                 Panel.ZIndex="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="450"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="450"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Viewbox Grid.Row="1"
                         Grid.Column="1" Grid.ColumnSpan="2">
                    <TextBlock Grid.Row="1"
                               Grid.Column="1" Grid.ColumnSpan="2"
                               Text="Battleships"
                               Style="{DynamicResource TitleText}"/>
                </Viewbox>
                <ItemsControl Grid.Row="3" Grid.Column="1"
                              ItemsSource="{Binding ComputerGrid}"
                              x:Name="ComputerGrid">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="10" Columns="10"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Style="{DynamicResource PlayGameGridButton}">
                                <Image Source="{Binding DisplayImage, TargetNullValue={x:Null}}"/>
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseEnter">
                                        <i:InvokeCommandAction Command="{Binding DataContext.MouseEnterCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                               CommandParameter="{Binding Index}"/>
                                    </i:EventTrigger>
                                    <i:EventTrigger EventName="MouseMove">
                                        <i:InvokeCommandAction Command="{Binding DataContext.MouseMoveCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                               CommandParameter="{Binding Index}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <StackPanel Grid.Row="3"
                            Grid.Column="3"
                            Orientation="Vertical">
                    <TextBlock Text="Special shots"
                               Style="{DynamicResource SubtitleText}"
                               Margin="0"/>
                    <controls:SpecialShotBar SpecialShotName="Airstrike"
                                             HitCount="{Binding AirstrikeHitCount}"
                                             HitTarget="{Binding AirstrikeHitTarget}"
                                             Visibility="{Binding AirstrikeAllowed, Converter={StaticResource BooleanToVisibilityConverter}}"
                                             Margin="0,10"/>
                    <ToggleButton Style="{DynamicResource ShotSelectionButton}"
                                  IsChecked="{Binding SelectedShotType,
                                      Converter={StaticResource ShotTypeToBooleanConverter}, 
                                      ConverterParameter={x:Static enums:ShotType.AirstrikeUpRight}, 
                                      Mode=TwoWay}"
                                  IsEnabled="{Binding AirstrikeAvailable}"
                                  Visibility="{Binding AirstrikeAllowed, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Image Source="{Binding AirstrikeUpRightButtonImage}"/>
                    </ToggleButton>
                    <ToggleButton Style="{DynamicResource ShotSelectionButton}"
                                  IsChecked="{Binding SelectedShotType,
                                  Converter={StaticResource ShotTypeToBooleanConverter}, 
                                  ConverterParameter={x:Static enums:ShotType.AirstrikeDownRight}, 
                                  Mode=TwoWay}"
                                  IsEnabled="{Binding AirstrikeAvailable}"
                                  Visibility="{Binding AirstrikeAllowed, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Image Source="{Binding AirstrikeDownRightButtonImage}"/>
                    </ToggleButton>
                    <controls:SpecialShotBar SpecialShotName="Bombardment"
                                             HitCount="{Binding BombardmentHitCount}"
                                             HitTarget="{Binding BombardmentHitTarget}"
                                             Visibility="{Binding BombardmentAllowed, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <ToggleButton Style="{DynamicResource ShotSelectionButton}"
                                  IsChecked="{Binding SelectedShotType,
                                  Converter={StaticResource ShotTypeToBooleanConverter}, 
                                  ConverterParameter={x:Static enums:ShotType.Bombardment}, 
                                  Mode=TwoWay}"
                                  IsEnabled="{Binding BombardmentAvailable}"
                                  Visibility="{Binding BombardmentAllowed, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Image Source="{Binding BombardmentButtonImage}"/>
                    </ToggleButton>
                </StackPanel>
                <StackPanel Grid.Row="5"
                            Grid.Column="1"
                            Orientation="Horizontal">
                    <Image x:Name="CaptainImage"
                           Source="{Binding CaptainImage}"
                           Width="100"
                           Height="200"
                           Visibility="Visible"/>
                    <Image x:Name="CaptainGif"
                           gif:ImageBehavior.AnimatedSource="{Binding CaptainGif}"
                           gif:ImageBehavior.AutoStart="True"
                           gif:ImageBehavior.RepeatBehavior="1x"
                           gif:ImageBehavior.AnimationSpeedRatio="1.0"
                           Width="100"
                           Height="200"
                           Visibility="Collapsed"
                           Loaded="CaptainGif_Loaded"
                           gif:ImageBehavior.AnimationCompleted="CaptainGif_AnimationCompleted"/>
                    <Canvas Grid.Row="5"
                            Grid.Column="1"
                            Width="350"
                            Height="200">
                        <Path Stroke="Black"
                              StrokeThickness="3"
                              Fill="White"
                              Data="M 0,130 H 30 V 30 A 30,30 90 0,1 60,0 H 320 A 30,30 90 0,1 350,30 V 170 A 30,30 90 0,1 320,200 H 60 A 30,30 90 0,1 30,170 V 160 Z"/>
                        <TextBlock Canvas.Top="0"
                                   Canvas.Left="30"
                                   Width="320"
                                   Height="200"
                                   Padding="15"
                                   TextWrapping="Wrap"
                                   Text="{Binding GameStatusMessage}"
                                   FontSize="30"
                                   Foreground="Black"/>
                    </Canvas>
                </StackPanel>
                <ItemsControl Grid.Row="5"
                              Grid.Column="3"
                              ItemsSource="{Binding PlayerGrid}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="10" Columns="10"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{DynamicResource PlayerGridBorder}">
                                <Image Source="{Binding DisplayImage, TargetNullValue={x:Null}}"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Viewbox>
    </Grid>
</UserControl>
