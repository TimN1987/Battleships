<UserControl x:Class="Battleships.MVVM.View.CustomControls.SpecialShotBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Battleships.MVVM.View.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    <UserControl.Resources>
        <Style x:Key="SpecialShotProgressBar" TargetType="{x:Type ProgressBar}">
            <Setter Property="Foreground" Value="{DynamicResource IsHighlightedBackground}"/>
            <Setter Property="Background" Value="{DynamicResource IsDefaultBackground}"/>
            <Setter Property="IsIndeterminate" Value="False"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="10,0,10,10"/>
        </Style>
    </UserControl.Resources>
    <Viewbox>
        <StackPanel Orientation="Vertical"
                    Width="200" Height="75">
            <TextBlock Text="{Binding SpecialShotName, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       Style="{DynamicResource SubtitleText}"
                       Height="40"/>
            <ProgressBar Value="{Binding HitCount, RelativeSource={RelativeSource AncestorType=UserControl}}"
                         Style="{StaticResource SpecialShotProgressBar}"
                         Minimum="0"
                         Maximum="{Binding HitTarget, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
        </StackPanel>
    </Viewbox>
</UserControl>
