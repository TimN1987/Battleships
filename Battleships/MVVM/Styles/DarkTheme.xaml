<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Defines colors for the Dark Theme -->
    <!-- Colors for different elements -->
    <!-- Background colors -->
    <Color x:Key="MainBackgroundGray">#111111</Color>
    <Color x:Key="MenuBackgroundBlack">#000000</Color>
    
    <!-- Border colors -->
    <Color x:Key="MenuBorderGray">#222222</Color>
    
    <!-- Highlight colors -->
    <Color x:Key="MenuHeaderHighlightGray">#606060</Color>
    <Color x:Key="MenuHeaderBorderHighlightGray">#707070</Color>
    <Color x:Key="SubmenuItemHighlightGray">#707070</Color>
    <Color x:Key="SubmenuItemBorderHighlightGray">#808080</Color>

    <!-- Button colors -->
    <Color x:Key="StandardButtonFocusBorderWhite">#CCCCCC</Color>
    <Color x:Key="StandardButtonBackgroundGray">#222222</Color>
    <Color x:Key="StandardButtonBorderWhite">#CCCCCC</Color>
    <Color x:Key="StandardButtonForegroundWhite">#BBBBBB</Color>
    <Color x:Key="StandardButtonDefaultedBorderWhite">#FFFFFF</Color>
    <Color x:Key="StandardButtonMouseOverBorderWhite">#FFFFFF</Color>
    <Color x:Key="StandardButtonMouseOverBackgroundGray">#666666</Color>
    <Color x:Key="StandardButtonMouseOverForegroundWhite">#CCCCCC</Color>
    <Color x:Key="StandardButtonPressedBackgroundGray">#444444</Color>
    <Color x:Key="StandardButtonPressedBorderGray">#AAAAAA</Color>
    <Color x:Key="StandardButtonPressedForegroundGray">#888888</Color>
    <Color x:Key="StandardButtonDisabledBackgroundGray">#111111</Color>
    <Color x:Key="StandardButtonDisabledBorderGray">#555555</Color>
    <Color x:Key="StandardButtonDisabledForegroundGray">#555555</Color>
    <Color x:Key="ShipDisplayGridBorderWhite">#CCCCCC</Color>

    <!-- Ship grid highlighting colors -->
    <Color x:Key="IsDefaultBackgroundBlack">#333333</Color>
    <Color x:Key="IsHighlightedBackgroundWhite">#DDDDDD</Color>
    <Color x:Key="IsOccupiedBackgroundBlack">#000000</Color>
    <Color x:Key="IsTouchingBackgroundGray">#909090</Color>
    <Color x:Key="IsHighlightedOccupiedBackgroundRed">#700000</Color>
    <Color x:Key="IsHighlightedTouchingBackgroundRed">#902020</Color>

    <!-- Text colors -->
    <Color x:Key="MainTextWhite">#EEEEEE</Color>
    <Color x:Key="DisabledMainTextGray">#888888</Color>
    <Color x:Key="SaveStatusTextGray">#BBBBBB</Color>
    <Color x:Key="SaveGameListTextWhite">#EEEEEE</Color>
    <Color x:Key="SaveGameTextBoxBackgroundTextGray">#707070</Color>

    <!-- TextBox colors -->
    <Color x:Key="SaveGameTextBoxBackgroundGray">#222222</Color>
    <Color x:Key="SaveGameTextBoxBorderWhite">#CCCCCC</Color>
    <Color x:Key="SaveGameTextBoxFocusBorderWhite">#FFFFFF</Color>

    <!-- Slider colors -->
    <Color x:Key="SliderThumbGray">#222222</Color>
    <Color x:Key="SliderTrackBackgroundGray">#444444</Color>
    <Color x:Key="SliderBorderBlack">#000000</Color>
    <Color x:Key="SliderThumbHighlightGray">#666666</Color>
    <Color x:Key="SliderThumbPressedGray">#333333</Color>
    <Color x:Key="SliderTickWhite">#FFFFFF</Color>

    <!-- Checkbox toggle colors-->
    <Color x:Key="CheckBoxBorderWhite">#FFFFFF</Color>
    <Color x:Key="CheckBoxBackgroundFalseBlack">#000000</Color>
    <Color x:Key="CheckBoxBackgroundTrueWhite">#FFFFFF</Color>
    <Color x:Key="CheckBoxThumbBorderWhite">#FFFFFF</Color>
    <Color x:Key="CheckBoxThumbFillBlack">#000000</Color>
    <Color x:Key="CheckBoxThumbHighlightGray">#444444</Color>
    
    <!-- ListView colors -->
    <Color x:Key="ListViewBackgroundGray">#333333</Color>
    <Color x:Key="ListViewBorderGray">#AAAAAA</Color>
    <Color x:Key="ListItemBorderGray">#BBBBBB</Color>
    <Color x:Key="ListItemMouseOverWhite">#DDDDDD</Color>
    <Color x:Key="ListItemSelectedGray">#888888</Color>
    <Color x:Key="ListItemSelectedMouseOverGray">#AAAAAA</Color>
    <Color x:Key="ListItemSelectedMouseOverBorderWhite">#DDDDDD</Color>

    <!-- Brushes to apply the colors -->
    <!-- Background brushes -->
    <SolidColorBrush x:Key="MainBackground" Color="{StaticResource MainBackgroundGray}"/>
    <SolidColorBrush x:Key="MenuBackground" Color="{StaticResource MenuBackgroundBlack}"/>

    <!-- Border brushes -->
    <SolidColorBrush x:Key="MenuBorder" Color="{StaticResource MenuBorderGray}"/>

    <!-- Highlight brushes -->
    <SolidColorBrush x:Key="MenuHeaderHighlight" Color="{StaticResource MenuHeaderHighlightGray}"/>
    <SolidColorBrush x:Key="MenuHeaderBorderHighlight" Color="{StaticResource MenuHeaderBorderHighlightGray}"/>
    <SolidColorBrush x:Key="SubmenuItemHighlight" Color="{StaticResource SubmenuItemHighlightGray}"/>
    <SolidColorBrush x:Key="SubmenuItemBorderHighlight" Color="{StaticResource SubmenuItemBorderHighlightGray}"/>

    <!-- Button brushes -->
    <SolidColorBrush x:Key="StandardButtonFocusBorder" Color="{StaticResource StandardButtonFocusBorderWhite}"/>
    <SolidColorBrush x:Key="StandardButtonBackground" Color="{StaticResource StandardButtonBackgroundGray}"/>
    <SolidColorBrush x:Key="StandardButtonBorder" Color="{StaticResource StandardButtonBorderWhite}"/>
    <SolidColorBrush x:Key="StandardButtonForeground" Color="{StaticResource StandardButtonForegroundWhite}"/>
    <SolidColorBrush x:Key="StandardButtonDefaultedBorder" Color="{StaticResource StandardButtonDefaultedBorderWhite}"/>
    <SolidColorBrush x:Key="StandardButtonMouseOverBorder" Color="{StaticResource StandardButtonMouseOverBorderWhite}"/>
    <SolidColorBrush x:Key="StandardButtonMouseOverBackground" Color="{StaticResource StandardButtonMouseOverBackgroundGray}"/>
    <SolidColorBrush x:Key="StandardButtonMouseOverForeground" Color="{StaticResource StandardButtonMouseOverForegroundWhite}"/>
    <SolidColorBrush x:Key="StandardButtonPressedBackground" Color="{StaticResource StandardButtonPressedBackgroundGray}"/>
    <SolidColorBrush x:Key="StandardButtonPressedBorder" Color="{StaticResource StandardButtonPressedBorderGray}"/>
    <SolidColorBrush x:Key="StandardButtonPressedForeground" Color="{StaticResource StandardButtonPressedForegroundGray}"/>
    <SolidColorBrush x:Key="StandardButtonDisabledBackground" Color="{StaticResource StandardButtonDisabledBackgroundGray}"/>
    <SolidColorBrush x:Key="StandardButtonDisabledBorder" Color="{StaticResource StandardButtonDisabledBorderGray}"/>
    <SolidColorBrush x:Key="StandardButtonDisabledForeground" Color="{StaticResource StandardButtonDisabledForegroundGray}"/>
    <SolidColorBrush x:Key="ShipDisplayGridBorder" Color="{StaticResource ShipDisplayGridBorderWhite}"/>

    <!-- Ship grid highlighting brushes-->
    <SolidColorBrush x:Key="IsDefaultBackground" Color="{StaticResource IsDefaultBackgroundBlack}"/>
    <SolidColorBrush x:Key="IsHighlightedBackground" Color="{StaticResource IsHighlightedBackgroundWhite}"/>
    <SolidColorBrush x:Key="IsOccupiedBackground" Color="{StaticResource IsOccupiedBackgroundBlack}"/>
    <SolidColorBrush x:Key="IsTouchingBackground" Color="{StaticResource IsTouchingBackgroundGray}"/>
    <SolidColorBrush x:Key="IsHighlightOccupiedBackground" Color="{StaticResource IsHighlightedOccupiedBackgroundRed}"/>
    <SolidColorBrush x:Key="IsHighlightedTouchingBackground" Color="{StaticResource IsHighlightedTouchingBackgroundRed}"/>

    <!-- Text brushes -->
    <SolidColorBrush x:Key="MainText" Color="{StaticResource MainTextWhite}"/>
    <SolidColorBrush x:Key="DisabledMainText" Color="{StaticResource DisabledMainTextGray}"/>
    <SolidColorBrush x:Key="SaveStatusText" Color="{StaticResource SaveStatusTextGray}"/>
    <SolidColorBrush x:Key="SaveGameListText" Color="{StaticResource SaveGameListTextWhite}"/>
    <SolidColorBrush x:Key="SaveGameTextBoxBackgroundText" Color="{StaticResource SaveGameTextBoxBackgroundTextGray}"/>

    <!-- TextBox brushes -->
    <SolidColorBrush x:Key="SaveGameTextBoxBackground" Color="{StaticResource SaveGameTextBoxBackgroundGray}"/>
    <SolidColorBrush x:Key="SaveGameTextBoxBorder" Color="{StaticResource SaveGameTextBoxBorderWhite}"/>
    <SolidColorBrush x:Key="SaveGameTextBoxFocusBorder" Color="{StaticResource SaveGameTextBoxFocusBorderWhite}"/>

    <!-- Slider brushes -->
    <SolidColorBrush x:Key="SliderThumb" Color="{StaticResource SliderThumbGray}"/>
    <SolidColorBrush x:Key="SliderTrackBackground" Color="{StaticResource SliderTrackBackgroundGray}"/>
    <SolidColorBrush x:Key="SliderBorder" Color="{StaticResource SliderBorderBlack}"/>
    <SolidColorBrush x:Key="SliderThumbHighlight" Color="{StaticResource SliderThumbHighlightGray}"/>
    <SolidColorBrush x:Key="SliderThumbPressed" Color="{StaticResource SliderThumbPressedGray}"/>
    <SolidColorBrush x:Key="SliderTick" Color="{StaticResource SliderTickWhite}"/>

    <!-- Checkbox toggle brushes-->
    <SolidColorBrush x:Key="CheckBoxBorder" Color="{StaticResource CheckBoxBorderWhite}"/>
    <SolidColorBrush x:Key="CheckBoxBackgroundFalse" Color="{StaticResource CheckBoxBackgroundFalseBlack}"/>
    <SolidColorBrush x:Key="CheckBoxBackgroundTrue" Color="{StaticResource CheckBoxBackgroundTrueWhite}"/>
    <SolidColorBrush x:Key="CheckBoxThumbBorder" Color="{StaticResource CheckBoxThumbBorderWhite}"/>
    <SolidColorBrush x:Key="CheckBoxThumbFill" Color="{StaticResource CheckBoxThumbFillBlack}"/>
    <SolidColorBrush x:Key="CheckBoxThumbHighlight" Color="{StaticResource CheckBoxThumbHighlightGray}"/>

    <!-- ListView brushes -->
    <SolidColorBrush x:Key="ListViewBackground" Color="{StaticResource ListViewBackgroundGray}"/>
    <SolidColorBrush x:Key="ListViewBorder" Color="{StaticResource ListViewBorderGray}"/>
    <SolidColorBrush x:Key="ListItemBorder" Color="{StaticResource ListItemBorderGray}"/>
    <SolidColorBrush x:Key="ListItemMouseOver" Color="{StaticResource ListItemMouseOverWhite}"/>
    <SolidColorBrush x:Key="ListItemSelected" Color="{StaticResource ListItemSelectedGray}"/>
    <SolidColorBrush x:Key="ListItemSelectedMouseOver" Color="{StaticResource ListItemSelectedMouseOverGray}"/>
    <SolidColorBrush x:Key="ListItemSelectedMouseOverBorder" Color="{StaticResource ListItemSelectedMouseOverBorderWhite}"/>
</ResourceDictionary>