                                       Grid.Row="0"
                                       Text="{Binding SaveDate}"
                                       Style="{StaticResource SaveGameListViewDateTimeStyle}"/>
                            <TextBlock Grid.Column="2"
                                       Grid.Row="1"
                                       Text="{Binding SaveTime}"
                                       Style="{StaticResource SaveGameListViewDateTimeStyle}"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
