<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:System="clr-namespace:System;assembly=netstandard">
    <!-- Defines the fonts and text sizes for the application -->
    <!-- Title text for page titles -->
    <FontFamily x:Key="TitleTextFont">Stencil</FontFamily>
    <System:Double x:Key="TitleTextFontSize">40</System:Double>
    <FontWeight x:Key="TitleTextFontWeight">Bold</FontWeight>
    <FontStyle x:Key="TitleTextFontStyle">Normal</FontStyle>
    
    <!-- Subtitle text for subtitles on pages -->
    <FontFamily x:Key="SubtitleTextFont">Agency FB</FontFamily>
    <System:Double x:Key="SubtitleTextFontSize">25</System:Double>
    <FontWeight x:Key="SubtitleTextFontWeight">Bold</FontWeight>
    <FontStyle x:Key="SubtitleTextFontStyle">Normal</FontStyle>

    <!-- Standard text for descriptions on pages -->
    <FontFamily x:Key="StandardTextFont">Agency FB</FontFamily>
    <System:Double x:Key="StandardTextFontSize">20</System:Double>
    <FontWeight x:Key="StandardTextFontWeight">Normal</FontWeight>
    <FontStyle x:Key="StandardTextFontStyle">Normal</FontStyle>
    
    <!-- Save game name text for TextBox -->
    <FontFamily x:Key="SaveGameTextFont">AgencyFB</FontFamily>
    <System:Double x:Key="SaveGameTextFontSize">28</System:Double>
    <FontWeight x:Key="SaveGameTextFontWeight">Normal</FontWeight>
    <FontStyle x:Key="SaveGameTextFontStyle">Normal</FontStyle>
    
    <!-- Menu text for save status messages -->
    <FontFamily x:Key="SaveStatusTextFont">Arial</FontFamily>
    <System:Double x:Key="SaveStatusTextFontSize">16</System:Double>
    <FontWeight x:Key="SaveStatusTextFontWeight">Normal</FontWeight>
    <FontStyle x:Key="SaveStatusTextFontStyle">Italic</FontStyle>

    <!-- Button text for button labels -->
    <FontFamily x:Key="ButtonTextFont">Agency FB</FontFamily>
    <System:Double x:Key="ButtonTextFontSize">32</System:Double>
    <FontWeight x:Key="ButtonTextFontWeight">Normal</FontWeight>
    <FontStyle x:Key="ButtonTextFontStyle">Normal</FontStyle>

    <!-- Menu text for the menu bar -->
    <FontFamily x:Key="MenuTextFont">Agency FB</FontFamily>
    <System:Double x:Key="MenuTextFontSize">20</System:Double>
    
    <!-- Menu item text for menu items in the Popup -->
    
    <!-- Tooltip text for descriptions with tooltips -->
    
</ResourceDictionary>