<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Defines colors for the Classic Theme -->
    <!-- Background colors -->
    <Color x:Key="MainBackgroundBlue">#000083</Color>
    <Color x:Key="MenuBackgroundNavy">#000080</Color>
    
    <!-- Border colors -->
    <Color x:Key="MenuBorderBlue">#000090</Color>

    <!-- Highlight colors -->
    <Color x:Key="MenuHeaderHighlightPurple">#400080</Color>
    <Color x:Key="MenuHeaderBorderHighlightBlue">#004080</Color>
    <Color x:Key="SubmenuItemHighlightPurple">#500090</Color>
    <Color x:Key="SubmenuItemBorderHighlightBlue">#005090</Color>

    <!-- Button colors -->
    <Color x:Key="StandardButtonFocusBorderBlack">#000000</Color>
    <Color x:Key="StandardButtonBackgroundGray">#888888</Color>
    <Color x:Key="StandardButtonBorderBlack">#000000</Color>
    <Color x:Key="StandardButtonForegroundBlack">#000000</Color>
    <Color x:Key="StandardButtonDefaultedBorderBlue">#000080</Color>
    <Color x:Key="StandardButtonMouseOverBorderBlue">#000080</Color>
    <Color x:Key="StandardButtonMouseOverBackgroundPurple">#500090</Color>
    <Color x:Key="StandardButtonMouseOverForegroundWhite">#CCCCCC</Color>
    <Color x:Key="StandardButtonPressedBackgroundGray">#444444</Color>
    <Color x:Key="StandardButtonPressedBorderGray">#AAAAAA</Color>
    <Color x:Key="StandardButtonPressedForegroundGray">#888888</Color>
    <Color x:Key="StandardButtonDisabledBackgroundGray">#888888</Color>
    <Color x:Key="StandardButtonDisabledBorderGray">#555555</Color>
    <Color x:Key="StandardButtonDisabledForegroundGray">#555555</Color>
    <Color x:Key="ShipDisplayGridBorderGray">#909090</Color>
    
    <!-- Ship grid highlighting colors -->
    <Color x:Key="IsDefaultBackgroundBlue">#5050FF</Color>
    <Color x:Key="IsHighlightedBackgroundGreen">#20AA20</Color>
    <Color x:Key="IsOccupiedBackgroundGray">#404040</Color>
    <Color x:Key="IsTouchingBackgroundGray">#909090</Color>
    <Color x:Key="IsHighlightedOccupiedBackgroundRed">#AA2020</Color>
    <Color x:Key="IsHighlightedTouchingBackgroundRed">#FF5050</Color>
    
    <!-- Text colors -->
    <Color x:Key="MainTextGold">#D4AF37</Color>
    <Color x:Key="DisabledMainTextGray">#666666</Color>
    <Color x:Key="SaveStatusTextGray">#808080</Color>
    <Color x:Key="SaveGameListTextBlack">#0A0A0A</Color>
    <Color x:Key="SaveGameTextBoxBackgroundTextGray">#505050</Color>
    
    <!-- TextBox colors -->
    <Color x:Key="SaveGameTextBoxBackgroundGray">#909090</Color>
    <Color x:Key="SaveGameTextBoxBorderGray">#606060</Color>
    <Color x:Key="SaveGameTextBoxFocusBorderGray">#808080</Color>

    <!-- Slider colors -->
    <Color x:Key="SliderThumbGray">#909090</Color>
    <Color x:Key="SliderTrackBackgroundGray">#EEEEEE</Color>
    <Color x:Key="SliderBorderGray">#606060</Color>
    <Color x:Key="SliderThumbHighlightGray">#FFFFFF</Color>
    <Color x:Key="SliderThumbPressedGray">#BBBBBB</Color>
    <Color x:Key="SliderTickGray">#CCCCCC</Color>
    
    <!-- Checkbox toggle colors-->
    <Color x:Key="CheckBoxBorderGray">#909090</Color>
    <Color x:Key="CheckBoxBackgroundFalseRed">#900000</Color>
    <Color x:Key="CheckBoxBackgroundTrueGreen">#009000</Color>
    <Color x:Key="CheckBoxThumbBorderGray">#909090</Color>
    <Color x:Key="CheckBoxThumbFillGray">#454545</Color>
    <Color x:Key="CheckBoxThumbHighlightGray">#606060</Color>
    
    <!-- ListView colors -->
    <Color x:Key="ListViewBackgroundGray">#909090</Color>
    <Color x:Key="ListViewBorderGray">#404040</Color>
    <Color x:Key="ListItemBorderGray">#606060</Color>
    <Color x:Key="ListItemMouseOverPurple">#500090</Color>
    <Color x:Key="ListItemSelectedGreen">#20AA20</Color>
    <Color x:Key="ListItemSelectedMouseOverGreen">#006000</Color>
    <Color x:Key="ListItemSelectedMouseOverBorderGreen">#006000</Color>

    <!-- Background brushes -->
    <SolidColorBrush x:Key="MainBackground" Color="{StaticResource MainBackgroundBlue}"/>
    <SolidColorBrush x:Key="MenuBackground" Color="{StaticResource MenuBackgroundNavy}"/>
    
    <!-- Border brushes -->
    <SolidColorBrush x:Key="MenuBorder" Color="{StaticResource MenuBorderBlue}"/>

    <!-- Highlight brushes -->
    <SolidColorBrush x:Key="MenuHeaderHighlight" Color="{StaticResource MenuHeaderHighlightPurple}"/>
    <SolidColorBrush x:Key="MenuHeaderBorderHighlight" Color="{StaticResource MenuHeaderBorderHighlightBlue}"/>
    <SolidColorBrush x:Key="SubmenuItemHighlight" Color="{StaticResource SubmenuItemHighlightPurple}"/>
    <SolidColorBrush x:Key="SubmenuItemBorderHighlight" Color="{StaticResource SubmenuItemBorderHighlightBlue}"/>

    <!-- Button brushes -->
    <SolidColorBrush x:Key="StandardButtonFocusBorder" Color="{StaticResource StandardButtonFocusBorderBlack}"/>
    <SolidColorBrush x:Key="StandardButtonBackground" Color="{StaticResource StandardButtonBackgroundGray}"/>
    <SolidColorBrush x:Key="StandardButtonBorder" Color="{StaticResource StandardButtonBorderBlack}"/>
    <SolidColorBrush x:Key="StandardButtonForeground" Color="{StaticResource StandardButtonForegroundBlack}"/>
    <SolidColorBrush x:Key="StandardButtonDefaultedBorder" Color="{StaticResource StandardButtonDefaultedBorderBlue}"/>
    <SolidColorBrush x:Key="StandardButtonMouseOverBorder" Color="{StaticResource StandardButtonMouseOverBorderBlue}"/>
    <SolidColorBrush x:Key="StandardButtonMouseOverBackground" Color="{StaticResource StandardButtonMouseOverBackgroundPurple}"/>
    <SolidColorBrush x:Key="StandardButtonMouseOverForeground" Color="{StaticResource StandardButtonMouseOverForegroundWhite}"/>
    <SolidColorBrush x:Key="StandardButtonPressedBackground" Color="{StaticResource StandardButtonPressedBackgroundGray}"/>
    <SolidColorBrush x:Key="StandardButtonPressedBorder" Color="{StaticResource StandardButtonPressedBorderGray}"/>
    <SolidColorBrush x:Key="StandardButtonPressedForeground" Color="{StaticResource StandardButtonPressedForegroundGray}"/>
    <SolidColorBrush x:Key="StandardButtonDisabledBackground" Color="{StaticResource StandardButtonDisabledBackgroundGray}"/>
    <SolidColorBrush x:Key="StandardButtonDisabledBorder" Color="{StaticResource StandardButtonDisabledBorderGray}"/>
    <SolidColorBrush x:Key="StandardButtonDisabledForeground" Color="{StaticResource StandardButtonDisabledForegroundGray}"/>
    <SolidColorBrush x:Key="ShipDisplayGridBorder" Color="{StaticResource ShipDisplayGridBorderGray}"/>
    
    <!-- Ship grid highlighting brushes-->
    <SolidColorBrush x:Key="IsDefaultBackground" Color="{StaticResource IsDefaultBackgroundBlue}"/>
    <SolidColorBrush x:Key="IsHighlightedBackground" Color="{StaticResource IsHighlightedBackgroundGreen}"/>
    <SolidColorBrush x:Key="IsOccupiedBackground" Color="{StaticResource IsOccupiedBackgroundGray}"/>
    <SolidColorBrush x:Key="IsTouchingBackground" Color="{StaticResource IsTouchingBackgroundGray}"/>
    <SolidColorBrush x:Key="IsHighlightOccupiedBackground" Color="{StaticResource IsHighlightedOccupiedBackgroundRed}"/>
    <SolidColorBrush x:Key="IsHighlightedTouchingBackground" Color="{StaticResource IsHighlightedTouchingBackgroundRed}"/>

    <!-- Text brushes -->
    <SolidColorBrush x:Key="MainText" Color="{StaticResource MainTextGold}"/>
    <SolidColorBrush x:Key="DisabledMainText" Color="{StaticResource DisabledMainTextGray}"/>
    <SolidColorBrush x:Key="SaveStatusText" Color="{StaticResource SaveStatusTextGray}"/>
    <SolidColorBrush x:Key="SaveGameListText" Color="{StaticResource SaveGameListTextBlack}"/>
    <SolidColorBrush x:Key="SaveGameTextBoxBackgroundText" Color="{StaticResource SaveGameTextBoxBackgroundTextGray}"/>
    
    <!-- TextBox brushes -->
    <SolidColorBrush x:Key="SaveGameTextBoxBackground" Color="{StaticResource SaveGameTextBoxBackgroundGray}"/>
    <SolidColorBrush x:Key="SaveGameTextBoxBorder" Color="{StaticResource SaveGameTextBoxBorderGray}"/>
    <SolidColorBrush x:Key="SaveGameTextBoxFocusBorder" Color="{StaticResource SaveGameTextBoxFocusBorderGray}"/>

    <!-- Slider brushes -->
    <SolidColorBrush x:Key="SliderThumb" Color="{StaticResource SliderThumbGray}"/>
    <SolidColorBrush x:Key="SliderTrackBackground" Color="{StaticResource SliderTrackBackgroundGray}"/>
    <SolidColorBrush x:Key="SliderBorder" Color="{StaticResource SliderBorderGray}"/>
    <SolidColorBrush x:Key="SliderThumbHighlight" Color="{StaticResource SliderThumbHighlightGray}"/>
    <SolidColorBrush x:Key="SliderThumbPressed" Color="{StaticResource SliderThumbPressedGray}"/>
    <SolidColorBrush x:Key="SliderTick" Color="{StaticResource SliderTickGray}"/>

    <!-- Checkbox toggle brushes-->
    <SolidColorBrush x:Key="CheckBoxBorder" Color="{StaticResource CheckBoxBorderGray}"/>
    <SolidColorBrush x:Key="CheckBoxBackgroundFalse" Color="{StaticResource CheckBoxBackgroundFalseRed}"/>
    <SolidColorBrush x:Key="CheckBoxBackgroundTrue" Color="{StaticResource CheckBoxBackgroundTrueGreen}"/>
    <SolidColorBrush x:Key="CheckBoxThumbBorder" Color="{StaticResource CheckBoxThumbBorderGray}"/>
    <SolidColorBrush x:Key="CheckBoxThumbFill" Color="{StaticResource CheckBoxThumbFillGray}"/>
    <SolidColorBrush x:Key="CheckBoxThumbHighlight" Color="{StaticResource CheckBoxThumbHighlightGray}"/>
    
    <!-- ListView brushes -->
    <SolidColorBrush x:Key="ListViewBackground" Color="{StaticResource ListViewBackgroundGray}"/>
    <SolidColorBrush x:Key="ListViewBorder" Color="{StaticResource ListViewBorderGray}"/>
    <SolidColorBrush x:Key="ListItemBorder" Color="{StaticResource ListItemBorderGray}"/>
    <SolidColorBrush x:Key="ListItemMouseOver" Color="{StaticResource ListItemMouseOverPurple}"/>
    <SolidColorBrush x:Key="ListItemSelected" Color="{StaticResource ListItemSelectedGreen}"/>
    <SolidColorBrush x:Key="ListItemSelectedMouseOver" Color="{StaticResource ListItemSelectedMouseOverGreen}"/>
    <SolidColorBrush x:Key="ListItemSelectedMouseOverBorder" Color="{StaticResource ListItemSelectedMouseOverBorderGreen}"/>
</ResourceDictionary>