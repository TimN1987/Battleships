<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Defines colors for the Dark Theme -->
    <!-- Colors for different elements -->
    <!-- Background colors -->
    <Color x:Key="MainBackgroundGray">#111111</Color>
    <Color x:Key="MenuBackgroundBlack">#000000</Color>

    <!-- Border colors -->
    <Color x:Key="MenuBorderGreen">#00FF00</Color>

    <!-- Highlight colors -->
    <Color x:Key="MenuHeaderHighlightPink">#FF70FF</Color>
    <Color x:Key="MenuHeaderBorderHighlightGreen">#00FF00</Color>
    <Color x:Key="SubmenuItemHighlightPink">#FF90FF</Color>
    <Color x:Key="SubmenuItemBorderHighlightGreen">#00FF00</Color>

    <!-- Button colors -->
    <Color x:Key="StandardButtonFocusBorderPink">#FF00FF</Color>
    <Color x:Key="StandardButtonBackgroundGray">#222222</Color>
    <Color x:Key="StandardButtonBorderGreen">#00FF00</Color>
    <Color x:Key="StandardButtonForegroundYellow">#FFFF00</Color>
    <Color x:Key="StandardButtonDefaultedBorderGreen">#00FF00</Color>
    <Color x:Key="StandardButtonMouseOverBorderGreen">#00FF00</Color>
    <Color x:Key="StandardButtonMouseOverBackgroundPink">#FF70FF</Color>
    <Color x:Key="StandardButtonMouseOverForegroundGreen">#70FF70</Color>
    <Color x:Key="StandardButtonPressedBackgroundGreen">#00FF00</Color>
    <Color x:Key="StandardButtonPressedBorderPink">#FF00FF</Color>
    <Color x:Key="StandardButtonPressedForegroundYellow">#FFFF00</Color>
    <Color x:Key="StandardButtonDisabledBackgroundGray">#444444</Color>
    <Color x:Key="StandardButtonDisabledBorderGreen">#AAFFAA</Color>
    <Color x:Key="StandardButtonDisabledForegroundYellow">#FFFFAA</Color>
    <Color x:Key="ShipDisplayGridBorderGreen">#00FF00</Color>

    <!-- Ship grid highlighting colors -->
    <Color x:Key="IsDefaultBackgroundBlack">#333333</Color>
    <Color x:Key="IsHighlightedBackgroundGreen">#00FF00</Color>
    <Color x:Key="IsOccupiedBackgroundYellow">#FFFF00</Color>
    <Color x:Key="IsTouchingBackgroundPink">#FFAAFF</Color>
    <Color x:Key="IsHighlightedOccupiedBackgroundRed">#FF0000</Color>
    <Color x:Key="IsHighlightedTouchingBackgroundPink">#FF00FF</Color>

    <!-- Text colors -->
    <Color x:Key="MainTextYellow">#FFFF00</Color>
    <Color x:Key="DisabledMainTextGray">#888888</Color>
    <Color x:Key="SaveStatusTextYellow">#DDDD99</Color>
    <Color x:Key="SaveGameListTextYellow">#FFCC11</Color>
    <Color x:Key="SaveGameTextBoxBackgroundTextPink">#800080</Color>

    <!-- TextBox colors -->
    <Color x:Key="SaveGameTextBoxBackgroundGray">#222222</Color>
    <Color x:Key="SaveGameTextBoxBorderYellow">#FFFF00</Color>
    <Color x:Key="SaveGameTextBoxFocusBorderGreen">#00FF00</Color>

    <!-- Slider colors -->
    <Color x:Key="SliderThumbPink">#FF00FF</Color>
    <Color x:Key="SliderTrackBackgroundGreen">#50FF50</Color>
    <Color x:Key="SliderBorderYellow">#FFFF00</Color>
    <Color x:Key="SliderThumbHighlightGreen">#00FF00</Color>
    <Color x:Key="SliderThumbPressedYellow">#FFFF00</Color>
    <Color x:Key="SliderTickYellow">#FFFF00</Color>

    <!-- Checkbox toggle colors-->
    <Color x:Key="CheckBoxBorderYellow">#FFFF00</Color>
    <Color x:Key="CheckBoxBackgroundFalseRed">#FF0000</Color>
    <Color x:Key="CheckBoxBackgroundTrueGreen">#00FF00</Color>
    <Color x:Key="CheckBoxThumbBorderYellow">#FFFF00</Color>
    <Color x:Key="CheckBoxThumbFillPink">#FF00FF</Color>
    <Color x:Key="CheckBoxThumbHighlightYellow">#FFFF00</Color>

    <!-- ListView colors -->
    <Color x:Key="ListViewBackgroundBlack">#0A0A0A</Color>
    <Color x:Key="ListViewBorderYellow">#FFFF00</Color>
    <Color x:Key="ListItemBorderGreen">#00FF00</Color>
    <Color x:Key="ListItemMouseOverPink">#FF00FF</Color>
    <Color x:Key="ListItemSelectedGreen">#00FF00</Color>
    <Color x:Key="ListItemSelectedMouseOverYellow">#FFFF00</Color>
    <Color x:Key="ListItemSelectedMouseOverBorderPink">#FF00FF</Color>

    <!-- Brushes to apply the colors -->
    <!-- Background brushes -->
    <SolidColorBrush x:Key="MainBackground" Color="{StaticResource MainBackgroundGray}"/>
    <SolidColorBrush x:Key="MenuBackground" Color="{StaticResource MenuBackgroundBlack}"/>

    <!-- Border brushes -->
    <SolidColorBrush x:Key="MenuBorder" Color="{StaticResource MenuBorderGreen}"/>

    <!-- Highlight brushes -->
    <SolidColorBrush x:Key="MenuHeaderHighlight" Color="{StaticResource MenuHeaderHighlightPink}"/>
    <SolidColorBrush x:Key="MenuHeaderBorderHighlight" Color="{StaticResource MenuHeaderBorderHighlightGreen}"/>
    <SolidColorBrush x:Key="SubmenuItemHighlight" Color="{StaticResource SubmenuItemHighlightPink}"/>
    <SolidColorBrush x:Key="SubmenuItemBorderHighlight" Color="{StaticResource SubmenuItemBorderHighlightGreen}"/>

    <!-- Button brushes -->
    <SolidColorBrush x:Key="StandardButtonFocusBorder" Color="{StaticResource StandardButtonFocusBorderPink}"/>
    <SolidColorBrush x:Key="StandardButtonBackground" Color="{StaticResource StandardButtonBackgroundGray}"/>
    <SolidColorBrush x:Key="StandardButtonBorder" Color="{StaticResource StandardButtonBorderGreen}"/>
    <SolidColorBrush x:Key="StandardButtonForeground" Color="{StaticResource StandardButtonForegroundYellow}"/>
    <SolidColorBrush x:Key="StandardButtonDefaultedBorder" Color="{StaticResource StandardButtonDefaultedBorderGreen}"/>
    <SolidColorBrush x:Key="StandardButtonMouseOverBorder" Color="{StaticResource StandardButtonMouseOverBorderGreen}"/>
    <SolidColorBrush x:Key="StandardButtonMouseOverBackground" Color="{StaticResource StandardButtonMouseOverBackgroundPink}"/>
    <SolidColorBrush x:Key="StandardButtonMouseOverForeground" Color="{StaticResource StandardButtonMouseOverForegroundGreen}"/>
    <SolidColorBrush x:Key="StandardButtonPressedBackground" Color="{StaticResource StandardButtonPressedBackgroundGreen}"/>
    <SolidColorBrush x:Key="StandardButtonPressedBorder" Color="{StaticResource StandardButtonPressedBorderPink}"/>
    <SolidColorBrush x:Key="StandardButtonPressedForeground" Color="{StaticResource StandardButtonPressedForegroundYellow}"/>
    <SolidColorBrush x:Key="StandardButtonDisabledBackground" Color="{StaticResource StandardButtonDisabledBackgroundGray}"/>
    <SolidColorBrush x:Key="StandardButtonDisabledBorder" Color="{StaticResource StandardButtonDisabledBorderGreen}"/>
    <SolidColorBrush x:Key="StandardButtonDisabledForeground" Color="{StaticResource StandardButtonDisabledForegroundYellow}"/>
    <SolidColorBrush x:Key="ShipDisplayGridBorder" Color="{StaticResource ShipDisplayGridBorderGreen}"/>

    <!-- Ship grid highlighting brushes-->
    <SolidColorBrush x:Key="IsDefaultBackground" Color="{StaticResource IsDefaultBackgroundBlack}"/>
    <SolidColorBrush x:Key="IsHighlightedBackground" Color="{StaticResource IsHighlightedBackgroundGreen}"/>
    <SolidColorBrush x:Key="IsOccupiedBackground" Color="{StaticResource IsOccupiedBackgroundYellow}"/>
    <SolidColorBrush x:Key="IsTouchingBackground" Color="{StaticResource IsTouchingBackgroundPink}"/>
    <SolidColorBrush x:Key="IsHighlightOccupiedBackground" Color="{StaticResource IsHighlightedOccupiedBackgroundRed}"/>
    <SolidColorBrush x:Key="IsHighlightedTouchingBackground" Color="{StaticResource IsHighlightedTouchingBackgroundPink}"/>

    <!-- Text brushes -->
    <SolidColorBrush x:Key="MainText" Color="{StaticResource MainTextYellow}"/>
    <SolidColorBrush x:Key="DisabledMainText" Color="{StaticResource DisabledMainTextGray}"/>
    <SolidColorBrush x:Key="SaveStatusText" Color="{StaticResource SaveStatusTextYellow}"/>
    <SolidColorBrush x:Key="SaveGameListText" Color="{StaticResource SaveGameListTextYellow}"/>
    <SolidColorBrush x:Key="SaveGameTextBoxBackgroundText" Color="{StaticResource SaveGameTextBoxBackgroundTextPink}"/>

    <!-- TextBox brushes -->
    <SolidColorBrush x:Key="SaveGameTextBoxBackground" Color="{StaticResource SaveGameTextBoxBackgroundGray}"/>
    <SolidColorBrush x:Key="SaveGameTextBoxBorder" Color="{StaticResource SaveGameTextBoxBorderYellow}"/>
    <SolidColorBrush x:Key="SaveGameTextBoxFocusBorder" Color="{StaticResource SaveGameTextBoxFocusBorderGreen}"/>

    <!-- Slider brushes -->
    <SolidColorBrush x:Key="SliderThumb" Color="{StaticResource SliderThumbPink}"/>
    <SolidColorBrush x:Key="SliderTrackBackground" Color="{StaticResource SliderTrackBackgroundGreen}"/>
    <SolidColorBrush x:Key="SliderBorder" Color="{StaticResource SliderBorderYellow}"/>
    <SolidColorBrush x:Key="SliderThumbHighlight" Color="{StaticResource SliderThumbHighlightGreen}"/>
    <SolidColorBrush x:Key="SliderThumbPressed" Color="{StaticResource SliderThumbPressedYellow}"/>
    <SolidColorBrush x:Key="SliderTick" Color="{StaticResource SliderTickYellow}"/>

    <!-- Checkbox toggle brushes-->
    <SolidColorBrush x:Key="CheckBoxBorder" Color="{StaticResource CheckBoxBorderYellow}"/>
    <SolidColorBrush x:Key="CheckBoxBackgroundFalse" Color="{StaticResource CheckBoxBackgroundFalseRed}"/>
    <SolidColorBrush x:Key="CheckBoxBackgroundTrue" Color="{StaticResource CheckBoxBackgroundTrueGreen}"/>
    <SolidColorBrush x:Key="CheckBoxThumbBorder" Color="{StaticResource CheckBoxThumbBorderYellow}"/>
    <SolidColorBrush x:Key="CheckBoxThumbFill" Color="{StaticResource CheckBoxThumbFillPink}"/>
    <SolidColorBrush x:Key="CheckBoxThumbHighlight" Color="{StaticResource CheckBoxThumbHighlightYellow}"/>

    <!-- ListView brushes -->
    <SolidColorBrush x:Key="ListViewBackground" Color="{StaticResource ListViewBackgroundBlack}"/>
    <SolidColorBrush x:Key="ListViewBorder" Color="{StaticResource ListViewBorderYellow}"/>
    <SolidColorBrush x:Key="ListItemBorder" Color="{StaticResource ListItemBorderGreen}"/>
    <SolidColorBrush x:Key="ListItemMouseOver" Color="{StaticResource ListItemMouseOverPink}"/>
    <SolidColorBrush x:Key="ListItemSelected" Color="{StaticResource ListItemSelectedGreen}"/>
    <SolidColorBrush x:Key="ListItemSelectedMouseOver" Color="{StaticResource ListItemSelectedMouseOverYellow}"/>
    <SolidColorBrush x:Key="ListItemSelectedMouseOverBorder" Color="{StaticResource ListItemSelectedMouseOverBorderPink}"/>
</ResourceDictionary>