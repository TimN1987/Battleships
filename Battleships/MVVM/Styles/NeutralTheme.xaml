<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Defines colors for the Neutral Theme -->
    <!-- Background colors -->
    <Color x:Key="MainBackgroundBlue">#83C5BE</Color>
    <Color x:Key="MenuBackgroundBlue">#006D77</Color>

    <!-- Border colors -->
    <Color x:Key="MenuBorderPink">#FFDDD2</Color>

    <!-- Highlight colors -->
    <Color x:Key="MenuHeaderHighlightPink">#FFDDD2</Color>
    <Color x:Key="MenuHeaderBorderHighlightPink">#E29578</Color>
    <Color x:Key="SubmenuItemHighlightPink">#FFDDD2</Color>
    <Color x:Key="SubmenuItemBorderHighlightPink">#E29578</Color>

    <!-- Button colors -->
    <Color x:Key="StandardButtonFocusBorderPink">#FFDDD2</Color>
    <Color x:Key="StandardButtonBackgroundBlue">#006DD7</Color>
    <Color x:Key="StandardButtonBorderBlue">#83C5BE</Color>
    <Color x:Key="StandardButtonForegroundPink">#E29578</Color>
    <Color x:Key="StandardButtonDefaultedBorderPink">#FFDDD2</Color>
    <Color x:Key="StandardButtonMouseOverBorderBlue">#006DD7</Color>
    <Color x:Key="StandardButtonMouseOverBackgroundPink">#FFDDD2</Color>
    <Color x:Key="StandardButtonMouseOverForegroundBlack">#111111</Color>
    <Color x:Key="StandardButtonPressedBackgroundBlue">#83C5BE</Color>
    <Color x:Key="StandardButtonPressedBorderBlue">#006DD7</Color>
    <Color x:Key="StandardButtonPressedForegroundGray">#444444</Color>
    <Color x:Key="StandardButtonDisabledBackgroundPink">#FF9092</Color>
    <Color x:Key="StandardButtonDisabledBorderGray">#555555</Color>
    <Color x:Key="StandardButtonDisabledForegroundGray">#555555</Color>
    <Color x:Key="ShipDisplayGridBorderPink">#FFDDD2</Color>

    <!-- Ship grid highlighting colors -->
    <Color x:Key="IsDefaultBackgroundBlue">#006D77</Color>
    <Color x:Key="IsHighlightedBackgroundGreen">#95E278</Color>
    <Color x:Key="IsOccupiedBackgroundGray">#404040</Color>
    <Color x:Key="IsTouchingBackgroundGray">#909090</Color>
    <Color x:Key="IsHighlightedOccupiedBackgroundPink">#FF5050</Color>
    <Color x:Key="IsHighlightedTouchingBackgroundPink">#E29578</Color>

    <!-- Text colors -->
    <Color x:Key="MainTextPink">#CC6040</Color>
    <Color x:Key="DisabledMainTextGray">#EDF6F9</Color>
    <Color x:Key="SaveStatusTextGray">#CCDDDD</Color>
    <Color x:Key="SaveGameListTextPink">#CC6040</Color>
    <Color x:Key="SaveGameTextBoxBackgroundTextGray">#505050</Color>

    <!-- TextBox colors -->
    <Color x:Key="SaveGameTextBoxBackgroundBlue">#83C5BE</Color>
    <Color x:Key="SaveGameTextBoxBorderPink">#FFDDD2</Color>
    <Color x:Key="SaveGameTextBoxFocusBorderPink">#E29578</Color>

    <!-- Slider colors -->
    <Color x:Key="SliderThumbPink">#E29578</Color>
    <Color x:Key="SliderTrackBackgroundPink">#FFDDD2</Color>
    <Color x:Key="SliderBorderGray">#EDF6F9</Color>
    <Color x:Key="SliderThumbHighlightBlue">#83C5BE</Color>
    <Color x:Key="SliderThumbPressedBlue">#006D77</Color>
    <Color x:Key="SliderTickGray">#EDF6F9</Color>

    <!-- Checkbox toggle colors-->
    <Color x:Key="CheckBoxBorderGray">#EDF6F9</Color>
    <Color x:Key="CheckBoxBackgroundFalsePink">#E29578</Color>
    <Color x:Key="CheckBoxBackgroundTrueGreen">#95E278</Color>
    <Color x:Key="CheckBoxThumbBorderGray">#EDF6F9</Color>
    <Color x:Key="CheckBoxThumbFillBlue">#006D77</Color>
    <Color x:Key="CheckBoxThumbHighlightBlue">#83C5BE</Color>

    <!-- ListView colors -->
    <Color x:Key="ListViewBackgroundBlue">#83C5BE</Color>
    <Color x:Key="ListViewBorderPink">#FFDDD2</Color>
    <Color x:Key="ListItemBorderBlue">#006D77</Color>
    <Color x:Key="ListItemMouseOverPink">#FFDDD2</Color>
    <Color x:Key="ListItemSelectedGreen">#95E278</Color>
    <Color x:Key="ListItemSelectedMouseOverPink">#E29578</Color>
    <Color x:Key="ListItemSelectedMouseOverBorderPink">#FFDDD2</Color>

    <!-- Background brushes -->
    <SolidColorBrush x:Key="MainBackground" Color="{StaticResource MainBackgroundBlue}"/>
    <SolidColorBrush x:Key="MenuBackground" Color="{StaticResource MenuBackgroundBlue}"/>

    <!-- Border brushes -->
    <SolidColorBrush x:Key="MenuBorder" Color="{StaticResource MenuBorderPink}"/>

    <!-- Highlight brushes -->
    <SolidColorBrush x:Key="MenuHeaderHighlight" Color="{StaticResource MenuHeaderHighlightPink}"/>
    <SolidColorBrush x:Key="MenuHeaderBorderHighlight" Color="{StaticResource MenuHeaderBorderHighlightPink}"/>
    <SolidColorBrush x:Key="SubmenuItemHighlight" Color="{StaticResource SubmenuItemHighlightPink}"/>
    <SolidColorBrush x:Key="SubmenuItemBorderHighlight" Color="{StaticResource SubmenuItemBorderHighlightPink}"/>

    <!-- Button brushes -->
    <SolidColorBrush x:Key="StandardButtonFocusBorder" Color="{StaticResource StandardButtonFocusBorderPink}"/>
    <SolidColorBrush x:Key="StandardButtonBackground" Color="{StaticResource StandardButtonBackgroundBlue}"/>
    <SolidColorBrush x:Key="StandardButtonBorder" Color="{StaticResource StandardButtonBorderBlue}"/>
    <SolidColorBrush x:Key="StandardButtonForeground" Color="{StaticResource StandardButtonForegroundPink}"/>
    <SolidColorBrush x:Key="StandardButtonDefaultedBorder" Color="{StaticResource StandardButtonDefaultedBorderBlue}"/>
    <SolidColorBrush x:Key="StandardButtonMouseOverBorder" Color="{StaticResource StandardButtonMouseOverBorderBlue}"/>
    <SolidColorBrush x:Key="StandardButtonMouseOverBackground" Color="{StaticResource StandardButtonMouseOverBackgroundPink}"/>
    <SolidColorBrush x:Key="StandardButtonMouseOverForeground" Color="{StaticResource StandardButtonMouseOverForegroundBlack}"/>
    <SolidColorBrush x:Key="StandardButtonPressedBackground" Color="{StaticResource StandardButtonPressedBackgroundBlue}"/>
    <SolidColorBrush x:Key="StandardButtonPressedBorder" Color="{StaticResource StandardButtonPressedBorderBlue}"/>
    <SolidColorBrush x:Key="StandardButtonPressedForeground" Color="{StaticResource StandardButtonPressedForegroundGray}"/>
    <SolidColorBrush x:Key="StandardButtonDisabledBackground" Color="{StaticResource StandardButtonDisabledBackgroundPink}"/>
    <SolidColorBrush x:Key="StandardButtonDisabledBorder" Color="{StaticResource StandardButtonDisabledBorderGray}"/>
    <SolidColorBrush x:Key="StandardButtonDisabledForeground" Color="{StaticResource StandardButtonDisabledForegroundGray}"/>
    <SolidColorBrush x:Key="ShipDisplayGridBorder" Color="{StaticResource ShipDisplayGridBorderPink}"/>

    <!-- Ship grid highlighting brushes-->
    <SolidColorBrush x:Key="IsDefaultBackground" Color="{StaticResource IsDefaultBackgroundBlue}"/>
    <SolidColorBrush x:Key="IsHighlightedBackground" Color="{StaticResource IsHighlightedBackgroundGreen}"/>
    <SolidColorBrush x:Key="IsOccupiedBackground" Color="{StaticResource IsOccupiedBackgroundGray}"/>
    <SolidColorBrush x:Key="IsTouchingBackground" Color="{StaticResource IsTouchingBackgroundGray}"/>
    <SolidColorBrush x:Key="IsHighlightOccupiedBackground" Color="{StaticResource IsHighlightedOccupiedBackgroundPink}"/>
    <SolidColorBrush x:Key="IsHighlightedTouchingBackground" Color="{StaticResource IsHighlightedTouchingBackgroundPink}"/>

    <!-- Text brushes -->
    <SolidColorBrush x:Key="MainText" Color="{StaticResource MainTextPink}"/>
    <SolidColorBrush x:Key="DisabledMainText" Color="{StaticResource DisabledMainTextGray}"/>
    <SolidColorBrush x:Key="SaveStatusText" Color="{StaticResource SaveStatusTextGray}"/>
    <SolidColorBrush x:Key="SaveGameListText" Color="{StaticResource SaveGameListTextPink}"/>
    <SolidColorBrush x:Key="SaveGameTextBoxBackgroundText" Color="{StaticResource SaveGameTextBoxBackgroundTextGray}"/>

    <!-- TextBox brushes -->
    <SolidColorBrush x:Key="SaveGameTextBoxBackground" Color="{StaticResource SaveGameTextBoxBackgroundBlue}"/>
    <SolidColorBrush x:Key="SaveGameTextBoxBorder" Color="{StaticResource SaveGameTextBoxBorderPink}"/>
    <SolidColorBrush x:Key="SaveGameTextBoxFocusBorder" Color="{StaticResource SaveGameTextBoxFocusBorderPink}"/>

    <!-- Slider brushes -->
    <SolidColorBrush x:Key="SliderThumb" Color="{StaticResource SliderThumbPink}"/>
    <SolidColorBrush x:Key="SliderTrackBackground" Color="{StaticResource SliderTrackBackgroundPink}"/>
    <SolidColorBrush x:Key="SliderBorder" Color="{StaticResource SliderBorderGray}"/>
    <SolidColorBrush x:Key="SliderThumbHighlight" Color="{StaticResource SliderThumbHighlightBlue}"/>
    <SolidColorBrush x:Key="SliderThumbPressed" Color="{StaticResource SliderThumbPressedBlue}"/>
    <SolidColorBrush x:Key="SliderTick" Color="{StaticResource SliderTickGray}"/>

    <!-- Checkbox toggle brushes-->
    <SolidColorBrush x:Key="CheckBoxBorder" Color="{StaticResource CheckBoxBorderGray}"/>
    <SolidColorBrush x:Key="CheckBoxBackgroundFalse" Color="{StaticResource CheckBoxBackgroundFalsePink}"/>
    <SolidColorBrush x:Key="CheckBoxBackgroundTrue" Color="{StaticResource CheckBoxBackgroundTrueGreen}"/>
    <SolidColorBrush x:Key="CheckBoxThumbBorder" Color="{StaticResource CheckBoxThumbBorderGray}"/>
    <SolidColorBrush x:Key="CheckBoxThumbFill" Color="{StaticResource CheckBoxThumbFillBlue}"/>
    <SolidColorBrush x:Key="CheckBoxThumbHighlight" Color="{StaticResource CheckBoxThumbHighlightBlue}"/>

    <!-- ListView brushes -->
    <SolidColorBrush x:Key="ListViewBackground" Color="{StaticResource ListViewBackgroundBlue}"/>
    <SolidColorBrush x:Key="ListViewBorder" Color="{StaticResource ListViewBorderPink}"/>
    <SolidColorBrush x:Key="ListItemBorder" Color="{StaticResource ListItemBorderBlue}"/>
    <SolidColorBrush x:Key="ListItemMouseOver" Color="{StaticResource ListItemMouseOverPink}"/>
    <SolidColorBrush x:Key="ListItemSelected" Color="{StaticResource ListItemSelectedGreen}"/>
    <SolidColorBrush x:Key="ListItemSelectedMouseOver" Color="{StaticResource ListItemSelectedMouseOverPink}"/>
    <SolidColorBrush x:Key="ListItemSelectedMouseOverBorder" Color="{StaticResource ListItemSelectedMouseOverBorderPink}"/>
</ResourceDictionary>